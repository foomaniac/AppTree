@model IEnumerable<AppTree.Domain.AggregateModels.ApplicationAggregate.Application>

@{
    ViewData["Title"] = "Index";
}

<h1>Applications</h1>

<p>
    <a asp-action="Create" class="btn-primary btn">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="row">
            <th class="col-3">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.ApplicationType.Type)
            </th>
            <th class="col-5">
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th class="col"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="row">
            <td class="col-3">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="col-2">
                @Html.DisplayFor(modelItem => item.ApplicationType.Type)
            </td>
            <td class="col-5">
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td class="col">
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
