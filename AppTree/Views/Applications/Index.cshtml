@model IEnumerable<AppTree.Domain.AggregateModels.ApplicationAggregate.Application>

@{
    ViewData["Title"] = "Index";
}

<h1>Applications</h1>

<p>
    <a asp-action="Create" class="btn-primary btn">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="width: 10%">
                @Html.DisplayNameFor(model => model.ApplicationType.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Summary)
            </th>
            <th style="width: 15%"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationType.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
