@model AppTree.Domain.AggregateModels.ApplicationAggregate.Application

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Repository)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Repository)
        </dd>
    </dl>
    <hr/>
    
    <h4>Dependencies</h4>
    @foreach (var dependency in Model.Dependencies)
    {
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(dependency => dependency.Name)</dt>
            <dt class="col-5">@Html.DisplayFor(dependency => dependency.Repository)</dt>
        </dl>
    }

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
