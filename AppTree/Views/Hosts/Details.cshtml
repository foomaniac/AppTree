@model AppTree.Domain.AggregateModels.HostAggregate.Host
@{
    ViewData["Title"] = "Details";
}


<h2>       @Html.DisplayFor(model => model.HostName)</h2>
<div>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Domain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Domain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>

    </dl>
    <hr />

    <h4>Hosted Applications</h4>


    <table id="hostedApplications" class="table table-striped table-dark">
        <thead>
            <tr>
                <th>
                    Application
                </th>
                <th>
                    Evironment
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var applicationEnvironment in Model.Applications)
            {
                <tr>
                    <td>@applicationEnvironment.ParentApplication.Name</td>
                    <td>@applicationEnvironment.EnvironmentName</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#hostedApplications').DataTable();
        });
    </script>
}